<AnchorPane prefHeight="750.0" prefWidth="1250.0" xmlns="http://javafx.com/javafx/8.0.221" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Datamaskin.FXML.ExtraOrderEnduserPageController">
   <children>
      <SplitPane dividerPositions="0.5" layoutY="-5.0" prefHeight="670.0" prefWidth="1250.0">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="769.0" prefWidth="152.0">
               <children>
                  <Button fx:id="btnGoBack" layoutX="190.0" layoutY="14.0" mnemonicParsing="false" onAction="#goBack" onKeyPressed="#btnGoBackEnter" prefHeight="31.0" prefWidth="155.0" text="Gå til forrige side" />
                  <Label layoutX="197.0" layoutY="81.0" prefHeight="27.0" prefWidth="319.0" text="Trenger du noe ekstra tilbehør? Finn det her!" />
                  <Label layoutX="297.0" layoutY="473.0" prefHeight="21.0" prefWidth="96.0" text="Produktinfo: " />
                  <Button fx:id="btnSaveToCart" layoutX="215.0" layoutY="695.0" mnemonicParsing="false" onAction="#addToCart" onKeyPressed="#btnAddEnter" prefHeight="31.0" prefWidth="283.0" text="Legg til valgt produkt i handlekurven" />
                  <TableView fx:id="tblExtraProduct" layoutX="109.0" layoutY="108.0" onMouseClicked="#selectedItemEvent" prefHeight="323.0" prefWidth="495.0">
                    <columns>
                      <TableColumn fx:id="extraProductName" prefWidth="108.0" text="Tilbehor">
                        <cellValueFactory>
                            <PropertyValueFactory property="Name" />
                        </cellValueFactory>
                      </TableColumn>
                      <TableColumn fx:id="extraProductInfo" prefWidth="411.0" text="Beskrivelse">
                        <cellValueFactory>
                            <PropertyValueFactory property="Description" />
                        </cellValueFactory>
                      </TableColumn>
                        <TableColumn fx:id="extraProductPrice" prefWidth="73.0" text="Pris">
                            <cellValueFactory>
                                <PropertyValueFactory property="Price" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                  </TableView>
                  <Button fx:id="btnGoToMainpage" layoutX="20.0" layoutY="14.0" mnemonicParsing="false" onAction="#goToMainpage" onKeyPressed="#btnToMainpageEnter" prefHeight="31.0" prefWidth="155.0" text="Gå til forsiden" />
                  <ImageView fx:id="imgImageView" fitHeight="183.0" fitWidth="495.0" layoutX="109.0" layoutY="494.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="750.0" prefWidth="525.0">
               <children>
                  <Button fx:id="btnGoToPay" layoutX="387.0" layoutY="690.0" mnemonicParsing="false" onAction="#goToPay" onKeyPressed="#btnGoPayEnter" prefHeight="25.0" prefWidth="126.0" text="Gå til betaling" />
                   <TableView fx:id="tableviewCart" layoutX="7.0" layoutY="58.0" prefHeight="580.0" prefWidth="514.0">
                       <columns>
                           <TableColumn fx:id="nameColumn" prefWidth="136.0" text="Produktnavn">
                               <cellValueFactory>
                                   <PropertyValueFactory property="Name" />
                               </cellValueFactory>
                           </TableColumn>
                           <TableColumn fx:id="descriptionColumn" prefWidth="332.0" text="Beskrivelse">
                               <cellValueFactory>
                                   <PropertyValueFactory property="Description" />
                               </cellValueFactory>
                           </TableColumn>
                           <TableColumn fx:id="lifetimeColumn" prefWidth="65.0" text="Levetid">
                               <cellValueFactory>
                                   <PropertyValueFactory property="Lifetime" />
                               </cellValueFactory>
                           </TableColumn>
                           <TableColumn fx:id="priceColumn" prefWidth="67.0" text="Pris">
                               <cellValueFactory>
                                   <PropertyValueFactory property="Price" />
                               </cellValueFactory>
                           </TableColumn>
                       </columns>
                   </TableView>
                  <Label layoutX="61.0" layoutY="619.0" prefHeight="21.0" prefWidth="126.0" text="Totalt å betale:" />
                  <Label fx:id="lblTotalPrice" layoutX="187.0" layoutY="619.0" prefHeight="21.0" prefWidth="96.0" />
                  <Text layoutX="14.0" layoutY="30.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Handlekurv" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</AnchorPane>
